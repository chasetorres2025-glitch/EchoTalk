.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}

.empty-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.empty-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 32rpx;
  color: #888;
  text-align: center;
  margin-bottom: 60rpx;
  padding: 0 60rpx;
}

.start-btn {
  width: 60%;
}

.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 300rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top-color: #2c2c2c;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  color: #666;
}

.articles-section {
  display: flex;
  flex-direction: column;
  height: calc(100vh - 60rpx);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #2c2c2c;
}

.article-count {
  font-size: 28rpx;
  color: #888;
}

.article-list {
  flex: 1;
  margin-bottom: 30rpx;
}

.article-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-content {
  margin-bottom: 20rpx;
}

.article-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2c2c2c;
  display: block;
  margin-bottom: 16rpx;
}

.article-preview {
  font-size: 32rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.article-date {
  font-size: 28rpx;
  color: #999;
}

.article-status {
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
}

.article-status.saved {
  background-color: #e8f5e9;
  color: #4caf50;
}

.article-status.draft {
  background-color: #fff3e0;
  color: #ff9800;
}

.new-story-btn {
  width: 100%;
  margin-bottom: calc(30rpx + env(safe-area-inset-bottom));
}
