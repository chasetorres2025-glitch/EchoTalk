/* 文章列表页面样式 - EchoTalk */

.articles-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FEF9F3 0%, #FFF 100%);
}

/* 页面头部 */
.page-header {
  position: relative;
  padding: 60rpx 40rpx 80rpx;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #FF8C42 0%, #E6732F 100%);
  border-radius: 0 0 48rpx 48rpx;
}

.header-bg::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.header-content {
  position: relative;
  z-index: 1;
}

.page-title {
  display: block;
  font-size: 52rpx;
  font-weight: 800;
  color: #fff;
  margin-bottom: 12rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 60rpx;
}

.empty-illustration {
  position: relative;
  margin-bottom: 60rpx;
}

.empty-circle {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #FFF5EB 0%, #FFE4B5 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(255, 140, 66, 0.2);
}

.empty-icon {
  font-size: 100rpx;
}

.floating-icons {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.float-icon {
  position: absolute;
  font-size: 40rpx;
  animation: float 3s ease-in-out infinite;
}

.icon-1 {
  top: -20rpx;
  right: -20rpx;
  animation-delay: 0s;
}

.icon-2 {
  bottom: 20rpx;
  left: -30rpx;
  animation-delay: -1s;
}

.icon-3 {
  top: 40rpx;
  left: -20rpx;
  animation-delay: -2s;
}

@keyframes float {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(-10rpx) rotate(5deg); }
}

.empty-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2D3142;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 30rpx;
  color: #9CA3AF;
  text-align: center;
  margin-bottom: 60rpx;
  line-height: 1.5;
}

.create-btn {
  width: 70%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.btn-icon {
  font-size: 40rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 60rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 140, 66, 0.2);
  border-top-color: #FF8C42;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 30rpx;
  color: #9CA3AF;
}

/* 文章容器 */
.articles-container {
  position: relative;
  margin-top: -40rpx;
  padding: 0 30rpx;
}

.articles-list {
  height: calc(100vh - 200rpx);
}

/* 统计卡片 */
.stats-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 800;
  color: #FF8C42;
}

.stat-label {
  font-size: 26rpx;
  color: #9CA3AF;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #F0F0F0;
}

/* 文章网格 */
.articles-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.article-item {
  animation: slideIn 0.4s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.article-card {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.article-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.card-accent {
  height: 6rpx;
  width: 100%;
}

.card-accent.saved {
  background: linear-gradient(90deg, #88D8B0 0%, #4CAF50 100%);
}

.card-accent.draft {
  background: linear-gradient(90deg, #FFB380 0%, #FF8C42 100%);
}

.card-body {
  padding: 28rpx 32rpx;
}

.card-header-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.article-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #2D3142;
  flex: 1;
  margin-right: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.status-tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.status-tag.saved {
  background: rgba(136, 216, 176, 0.15);
  color: #4CAF50;
}

.status-tag.draft {
  background: rgba(255, 179, 128, 0.15);
  color: #FF8C42;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.status-tag.saved .status-dot {
  background: #4CAF50;
}

.status-tag.draft .status-dot {
  background: #FF8C42;
}

.article-preview {
  display: block;
  font-size: 28rpx;
  color: #9CA3AF;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 2rpx solid #F8F8F8;
}

.date-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.date-icon {
  font-size: 24rpx;
}

.date-text {
  font-size: 24rpx;
  color: #D1D5DB;
}

.action-hint {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #FF8C42;
  font-weight: 500;
}

.arrow {
  transition: transform 0.2s ease;
}

.article-card:active .arrow {
  transform: translateX(4rpx);
}

/* 悬浮按钮 */
.fab-container {
  position: fixed;
  bottom: calc(60rpx + env(safe-area-inset-bottom));
  right: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  z-index: 100;
}

.fab-btn {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #FF8C42 0%, #E6732F 100%);
  border-radius: 50%;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 140, 66, 0.4);
  transition: all 0.3s ease;
}

.fab-btn::after {
  border: none;
}

.fab-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(255, 140, 66, 0.3);
}

.fab-icon {
  font-size: 56rpx;
  color: #fff;
  font-weight: 300;
}

.fab-label {
  font-size: 24rpx;
  color: #FF8C42;
  font-weight: 500;
  background: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}
