/* 首页样式 - EchoTalk */

.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FEF9F3 0%, #FFF5EB 50%, #FEF9F3 100%);
  position: relative;
  overflow: hidden;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 顶部装饰渐变球 */
.hero-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 600rpx;
  overflow: hidden;
  pointer-events: none;
}

.gradient-orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.5;
}

.orb-1 {
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(135deg, #FFB380 0%, #FF8C42 100%);
  top: -100rpx;
  right: -100rpx;
  animation: float 6s ease-in-out infinite;
}

.orb-2 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #88D8B0 0%, #6B5B95 100%);
  top: 100rpx;
  left: -80rpx;
  animation: float 8s ease-in-out infinite;
  animation-delay: -2s;
}

.orb-3 {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #FFE4B5 0%, #FFB380 100%);
  top: 200rpx;
  right: 100rpx;
  animation: float 7s ease-in-out infinite;
  animation-delay: -4s;
}

/* 欢迎区域 */
.hero-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 120rpx;
  margin-bottom: 60rpx;
  position: relative;
  z-index: 1;
}

.logo-wrapper {
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #FF8C42 0%, #E6732F 100%);
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 140, 66, 0.3);
  animation: pulse 3s ease-in-out infinite;
}

.logo-icon {
  font-size: 72rpx;
}

.app-name {
  font-size: 64rpx;
  font-weight: 800;
  color: #2D3142;
  letter-spacing: -2rpx;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #2D3142 0%, #6B5B95 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.tagline {
  font-size: 40rpx;
  font-weight: 600;
  color: #FF8C42;
  margin-bottom: 20rpx;
}

.description {
  font-size: 30rpx;
  color: #9CA3AF;
  text-align: center;
  line-height: 1.5;
  max-width: 500rpx;
}

/* 功能特色区域 */
.features-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 60rpx;
  position: relative;
  z-index: 1;
}

.feature-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(45, 49, 66, 0.06);
  transition: all 0.3s ease;
}

.feature-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(45, 49, 66, 0.1);
}

.feature-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.feature-icon {
  font-size: 40rpx;
}

.feature-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3142;
  display: block;
  margin-bottom: 4rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: #9CA3AF;
}

/* 操作按钮区域 */
.action-section {
  margin-top: auto;
  padding-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.start-btn {
  width: 100%;
  height: 108rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
  font-size: 38rpx;
  font-weight: 600;
}

.btn-icon {
  font-size: 40rpx;
}

.view-btn {
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
}

/* 底部区域 */
.footer-section {
  text-align: center;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  position: relative;
  z-index: 1;
}

.footer-text {
  font-size: 26rpx;
  color: #D1D5DB;
  font-style: italic;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-20rpx) rotate(5deg);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 8rpx 32rpx rgba(255, 140, 66, 0.3);
  }
  50% {
    transform: scale(1.02);
    box-shadow: 0 12rpx 40rpx rgba(255, 140, 66, 0.4);
  }
}

.animate-fade-in {
  animation: fadeIn 0.6s ease-out forwards;
  opacity: 0;
}
