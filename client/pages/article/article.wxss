.article-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.loading-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #e0e0e0;
  border-top-color: #2c2c2c;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 40rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 36rpx;
  color: #666;
}

.content-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

.article-header {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.article-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c2c2c;
  display: block;
  margin-bottom: 20rpx;
}

.article-date {
  font-size: 28rpx;
  color: #999;
}

.article-content {
  flex: 1;
  background-color: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.article-text {
  font-size: 40rpx;
  line-height: 2;
  color: #333;
  white-space: pre-wrap;
}

.edit-section {
  flex: 1;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

.edit-textarea {
  flex: 1;
  font-size: 36rpx;
  line-height: 1.8;
  color: #333;
  min-height: 600rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
}

.edit-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  gap: 20rpx;
}

.btn-cancel {
  flex: 1;
  height: 90rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 36rpx;
  border-radius: 12rpx;
  border: none;
}

.btn-cancel::after {
  border: none;
}

.btn-confirm {
  flex: 1;
  height: 90rpx;
  background-color: #2c2c2c;
  color: #fff;
  font-size: 36rpx;
  border-radius: 12rpx;
  border: none;
}

.btn-confirm::after {
  border: none;
}

.action-section {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-btn.playing {
  background-color: #e8f5e9;
}

.save-btn {
  background-color: #2c2c2c;
}

.save-btn .btn-label {
  color: #fff;
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.btn-label {
  font-size: 32rpx;
  color: #333;
}
