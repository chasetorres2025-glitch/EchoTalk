.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.status-bar {
  background-color: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #eee;
  min-height: 80rpx;
}

.status-text {
  font-size: 32rpx;
  color: #666;
  margin-right: 20rpx;
}

.thinking-indicator {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #2c2c2c;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes bounce {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

.message-list {
  flex: 1;
  padding: 20rpx;
}

.message-wrapper {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.message-wrapper.user {
  align-items: flex-end;
}

.message-wrapper.ai {
  align-items: flex-start;
}

.message-bubble {
  max-width: 80%;
  padding: 24rpx 32rpx;
  border-radius: 20rpx;
  word-wrap: break-word;
}

.message-wrapper.user .message-bubble {
  background-color: #2c2c2c;
}

.message-wrapper.ai .message-bubble {
  background-color: #fff;
  border: 1rpx solid #e0e0e0;
}

.message-text {
  font-size: 36rpx;
  line-height: 1.6;
}

.message-wrapper.user .message-text {
  color: #fff;
}

.message-wrapper.ai .message-text {
  color: #333;
}

.message-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.input-area {
  background-color: #fff;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
}

.recording-hint {
  text-align: center;
  margin-bottom: 20rpx;
}

.recording-time {
  font-size: 48rpx;
  color: #ff4444;
  font-weight: bold;
  display: block;
}

.recording-text {
  font-size: 28rpx;
  color: #999;
}

.voice-btn {
  width: 100%;
  height: 100rpx;
  background-color: #2c2c2c;
  color: #fff;
  font-size: 40rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  border: none;
}

.voice-btn::after {
  border: none;
}

.voice-btn.recording {
  background-color: #ff4444;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.02); }
}

.btn-text {
  font-weight: 500;
}

.finish-btn {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  color: #2c2c2c;
  font-size: 36rpx;
  border-radius: 40rpx;
  border: 2rpx solid #2c2c2c;
  display: flex;
  align-items: center;
  justify-content: center;
}

.finish-btn::after {
  border: none;
}
