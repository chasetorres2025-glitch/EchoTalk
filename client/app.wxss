page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  background-color: #f5f5f5;
}

.container {
  padding: 30rpx;
}

.btn-primary {
  background-color: #2c2c2c;
  color: #fff;
  font-size: 40rpx;
  padding: 30rpx 60rpx;
  border-radius: 16rpx;
  border: none;
  font-weight: 500;
}

.btn-primary::after {
  border: none;
}

.btn-secondary {
  background-color: #fff;
  color: #2c2c2c;
  font-size: 36rpx;
  padding: 24rpx 48rpx;
  border-radius: 12rpx;
  border: 2rpx solid #2c2c2c;
}

.text-large {
  font-size: 40rpx;
  line-height: 1.8;
  color: #333;
}

.text-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c2c2c;
}

.card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
