/* 全局样式 - EchoTalk 回忆录 */

/* 设计系统变量 */
page {
  --primary: #FF8C42;
  --primary-light: #FFB380;
  --primary-dark: #E6732F;
  --secondary: #6B5B95;
  --accent: #88D8B0;
  --background: #FEF9F3;
  --surface: #FFFFFF;
  --text-primary: #2D3142;
  --text-secondary: #9CA3AF;
  --text-tertiary: #D1D5DB;
  --shadow-sm: 0 2rpx 8rpx rgba(45, 49, 66, 0.06);
  --shadow-md: 0 4rpx 16rpx rgba(45, 49, 66, 0.08);
  --shadow-lg: 0 8rpx 32rpx rgba(45, 49, 66, 0.12);
  --radius-sm: 12rpx;
  --radius-md: 20rpx;
  --radius-lg: 32rpx;
  --radius-xl: 48rpx;
  
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  background-color: var(--background);
  color: var(--text-primary);
  line-height: 1.6;
}

/* 容器 */
.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 主按钮 - 渐变橙色 */
.btn-primary {
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  padding: 32rpx 64rpx;
  border-radius: var(--radius-xl);
  border: none;
  box-shadow: var(--shadow-md);
  transition: all 0.3s ease;
}

.btn-primary::after {
  border: none;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-sm);
}

/* 次要按钮 - 白色描边 */
.btn-secondary {
  background: var(--surface);
  color: var(--text-primary);
  font-size: 34rpx;
  font-weight: 500;
  padding: 28rpx 56rpx;
  border-radius: var(--radius-xl);
  border: 2rpx solid var(--text-tertiary);
  box-shadow: var(--shadow-sm);
}

.btn-secondary::after {
  border: none;
}

.btn-secondary:active {
  background: var(--background);
}

/* 文字按钮 */
.btn-text {
  background: transparent;
  color: var(--primary);
  font-size: 32rpx;
  font-weight: 500;
  padding: 20rpx 40rpx;
  border: none;
}

.btn-text::after {
  border: none;
}

/* 卡片样式 */
.card {
  background: var(--surface);
  border-radius: var(--radius-lg);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-sm);
}

.card-hover {
  transition: all 0.2s ease;
}

.card-hover:active {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-md);
}

/* 文字样式 */
.text-large {
  font-size: 40rpx;
  line-height: 1.8;
  color: var(--text-primary);
}

.text-title {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-primary);
  letter-spacing: -1rpx;
}

.text-subtitle {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.text-body {
  font-size: 32rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

.text-small {
  font-size: 26rpx;
  color: var(--text-tertiary);
}

/* 标签样式 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 20rpx;
  border-radius: var(--radius-sm);
  font-size: 24rpx;
  font-weight: 500;
}

.tag-primary {
  background: rgba(255, 140, 66, 0.12);
  color: var(--primary);
}

.tag-success {
  background: rgba(136, 216, 176, 0.15);
  color: #4CAF50;
}

.tag-warning {
  background: rgba(255, 193, 7, 0.15);
  color: #FF9800;
}

/* 分隔线 */
.divider {
  height: 2rpx;
  background: linear-gradient(90deg, transparent, var(--text-tertiary), transparent);
  margin: 40rpx 0;
}

/* 安全区域 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 动画 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.animate-fade-in {
  animation: fadeIn 0.5s ease-out;
}

.animate-pulse {
  animation: pulse 2s ease-in-out infinite;
}

.animate-float {
  animation: float 3s ease-in-out infinite;
}

/* 加载动画 */
.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid rgba(255, 140, 66, 0.2);
  border-top-color: var(--primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 骨架屏 */
.skeleton {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: var(--radius-sm);
}

@keyframes shimmer {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}
